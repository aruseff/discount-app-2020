{
  "name": "discount-app",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "electron .",
    "build:once": "ng build --base-href ./",
    "build:watch": "ng build --base-href ./ --watch",
    "test": "ng test",
    "test:codeCoverage": "ng test --codeCoverage",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "package": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "electron:windows": "npm run build:once && electron-builder build --windows"
  },
  "build": {
    "directories": {
      "output": "build"
    },
    "nsis": {
      "oneClick": false
    },
    "files": [
      "!**/.vscode",
      "!**/build",
      "!**/config",
      "!**/assets/data",
      "!**/src"
    ],
    "extraResources": [
      {
        "from": "src/assets/data",
        "to": "dist/assets/data",
        "filter": "database*"
      }
    ]
  },
  "dependencies": {
    "@angular/animations": "~11.0.5",
    "@angular/common": "~11.0.5",
    "@angular/compiler": "~11.0.5",
    "@angular/core": "~11.0.5",
    "@angular/forms": "~11.0.5",
    "@angular/platform-browser": "~11.0.5",
    "@angular/platform-browser-dynamic": "~11.0.5",
    "@angular/router": "~11.0.5",
    "@clr/angular": "4.0.9",
    "jquery": "^3.5.1",
    "popper.js": "^1.16.1",
    "rxjs": "~6.6.3",
    "sqlite3": "^5.0.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2",
    "@clr/ui": "4.0.9",
    "@clr/icons": "4.0.9",
    "@webcomponents/webcomponentsjs": "^2.0.0"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^10.0.1",
    "@angular-devkit/build-angular": "~0.1100.5",
    "@angular-eslint/builder": "0.8.0-beta.6",
    "@angular-eslint/eslint-plugin": "0.8.0-beta.6",
    "@angular-eslint/eslint-plugin-template": "0.8.0-beta.6",
    "@angular-eslint/schematics": "^0.8.0-beta.6",
    "@angular-eslint/template-parser": "0.8.0-beta.6",
    "@angular/cli": "~11.0.5",
    "@angular/compiler-cli": "~11.0.5",
    "@angular/language-service": "~11.0.5",
    "@types/jasmine": "~3.6.2",
    "@types/jasminewd2": "~2.0.8",
    "@types/node": "^14.14.14",
    "@types/sqlite3": "^3.1.6",
    "@typescript-eslint/eslint-plugin": "4.3.0",
    "@typescript-eslint/parser": "4.3.0",
    "electron": "^11.1.0",
    "electron-builder": "^22.9.1",
    "electron-reload": "^1.5.0",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "30.7.6",
    "eslint-plugin-prefer-arrow": "1.2.2",
    "ts-node": "~9.1.1",
    "typescript": "~4.0.5"
  }
}
